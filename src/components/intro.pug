mixin intro()
    .intro 
        .intro__body.container
            .intro__container
                h1.intro__title «ПРАВИЛО» - центр малоэтажного домостроения.
                p.intro__p 850+ Заказчиков доверили нам свои дома
                p.intro__p Выбери свой проект из 3000 готовых проектов
                form(action="").intro__form
                    .intro__dropdown 
                        button(type="button").intro__dropdown-btn Общая площадь
                            <svg width="12" height="6" viewBox="0 0 12 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 6L0.803847 0.75L11.1962 0.750001L6 6Z" fill="black"/>
                            </svg>
                        .intro__dropdown-content 
                            .intro__row
                                .intro__item 
                                    p.intro__txt От
                                    input(type="number").intro__input
                                .intro__item 
                                p.intro__txt До
                                input(type="number").intro__input
                    .intro__dropdown 
                        button(type="button").intro__dropdown-btn Количество этажей
                            <svg width="12" height="6" viewBox="0 0 12 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 6L0.803847 0.75L11.1962 0.750001L6 6Z" fill="black"/>
                            </svg>
                        .intro__dropdown-content 
                            .intro__wrapper 
                                .intro__checkboxes 
                                    input(type="checkbox" id="checkbox1").intro__checkbox
                                    label(for="checkbox1").intro__label одноэтажный
                                .intro__checkboxes 
                                    input(type="checkbox" id="checkbox2").intro__checkbox
                                    label(for="checkbox2").intro__label двухэтажный
                                .intro__checkboxes 
                                    input(type="checkbox" id="checkbox3").intro__checkbox
